global:
rule_files:
scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'grafana'
    static_configs:
      - targets: ['{{ mon_ip }}:3000']

  - job_name: 'node_exporter'
    static_configs:
      - targets:
        - "{{ db_ip }}:{{ node_exporter_port }}"
        - "{{ web_ip }}:{{ node_exporter_port }}"
        - "{{ mon_ip }}:{{ node_exporter_port }}"

  - job_name: 'apache'
    static_configs:
      - targets:
        - "{{ web_ip }}:{{ apache_exporter_port }}"

  - job_name: 'mysql'
    static_configs:
      - targets:
        - "{{ db_ip }}:{{ mysql_exporter_port }}"